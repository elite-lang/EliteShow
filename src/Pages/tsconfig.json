{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../../compiled/"
    },
    "filesGlob": [
        "../../typings/*.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "files": [
        "../../typings/tsd.d.ts",
        "Class/app.ts",
        "Class/cmd.ts",
        "about-page.tsx",
        "code-editor.tsx",
        "code-page.tsx",
        "config-page.tsx",
        "main-menu.tsx",
        "main-page.tsx",
        "setting-page.tsx",
        "show-page.tsx",
        "Show/LexDfa.tsx"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
